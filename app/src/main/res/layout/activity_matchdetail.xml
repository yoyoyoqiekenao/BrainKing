<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_pomes_2"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"></View>

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/view">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/iv_back_white"></ImageView>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="答题比赛"
            android:textColor="@color/color_ffffff"
            android:textSize="18dp"></TextView>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ll_left"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/iv_head"></ImageView>

        <View
            android:id="@+id/view_left"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_left"
            android:background="@color/color_2455F2"></View>

        <TextView
            android:id="@+id/tv_name_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/view_left"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/iv_left"
            android:text=""
            android:textColor="#06DEF1"
            android:textSize="16dp"></TextView>

        <TextView
            android:id="@+id/tv_fees_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_left"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_left"
            android:text=" "
            android:textColor="#FFA533"></TextView>
    </RelativeLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@mipmap/iv_vs"></ImageView>


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="82dp"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/stroke_2455f2_19"
        android:gravity="center"
        android:text="5S"
        android:textColor="@color/color_F2CB51"
        android:textSize="18dp"></TextView>

    <RelativeLayout
        android:id="@+id/ll_right"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:visibility="gone">


        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/iv_head"></ImageView>

        <View
            android:id="@+id/view_right"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_right"
            android:background="@color/color_2455F2"></View>

        <TextView
            android:id="@+id/tv_name_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/view_right"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@id/iv_right"
            android:textColor="#06DEF1"
            android:textSize="16dp"></TextView>

        <TextView
            android:id="@+id/tv_fees_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_right"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/iv_right"
            android:text=" "
            android:textColor="#FFA533"
            android:textSize="16dp"></TextView>

    </RelativeLayout>


</LinearLayout>