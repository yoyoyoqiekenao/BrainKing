<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--自定义ViewPager+fragment实现-->
    <declare-styleable name="EasyNavigationBar">
        <!--底部导航栏高度-->
        <attr name="Easy_navigationHeight" format="dimension" />
        <!--底部导航栏背景-->
        <attr name="Easy_navigationBackground" format="color" />
        <!--Tab字体大小-->
        <attr name="Easy_tabTextSize" format="dimension" />
        <!--Tab文字距Tab图标的距离-->
        <attr name="Easy_tabTextTop" format="dimension" />
        <!--Tab图标大小-->
        <attr name="Easy_tabIconSize" format="dimension" />
        <!--Tab未选中字体颜色-->
        <attr name="Easy_tabNormalColor" format="color" />
        <!--Tab选中字体颜色-->
        <attr name="Easy_tabSelectColor" format="color" />
        <!--提示红点的大小-->
        <attr name="Easy_hintPointSize" format="dimension" />
        <!--消息红点的大小-->
        <attr name="Easy_msgPointSize" format="dimension" />
        <!--提示红点距Tab图标的距离-->
        <attr name="Easy_hintPointLeft" format="dimension" />
        <!--消息红点距Tab图标的距离-->
        <attr name="Easy_msgPointLeft" format="dimension" />
        <!--提示红点距离顶部的距离-->
        <attr name="Easy_hintPointTop" format="dimension" />
        <!--消息红点距顶部的距离-->
        <attr name="Easy_msgPointTop" format="dimension" />
        <!--消息红点数字字体大小-->
        <attr name="Easy_msgPointTextSize" format="dimension" />

        <!--消息红点99+的长度-->
        <attr name="Easy_msgPointMoreWidth" format="dimension" />
        <!--消息红点99+的高度-->
        <attr name="Easy_msgPointMoreHeight" format="dimension" />
        <!--消息红点99+的半径-->
        <attr name="Easy_msgPointMoreRadius" format="integer" />
        <!--消息红点的颜色-->
        <attr name="Easy_msgPointColor" format="color" />


        <!--分割线高度-->
        <attr name="Easy_lineHeight" format="dimension" />
        <!--分割线颜色-->
        <attr name="Easy_lineColor" format="color" />

        <!--是否有paddingBottom-->
        <attr name="Easy_hasPadding" format="boolean" />


        <!--中间图片的大小-->
        <attr name="Easy_centerIconSize" format="dimension" />
        <!--底部导航栏和加号的高度  加号会居中-->
        <attr name="Easy_centerLayoutHeight" format="dimension" />
        <!--添加按钮距离底部的距离-->
        <attr name="Easy_centerLayoutBottomMargin" format="dimension" />
        <!--图标显示-->
        <attr name="Easy_scaleType">
            <flag name="CENTER_INSIDE" value="0" />
            <flag name="CENTER_CROP" value="1" />
            <flag name="CENTER" value="2" />
            <flag name="FIT_CENTER" value="3" />
            <flag name="FIT_END" value="4" />
            <flag name="FIT_START" value="5" />
            <flag name="FIT_XY" value="6" />
            <flag name="MATRIX" value="7" />
        </attr>


        <!--图标显示-->
        <attr name="Easy_centerLayoutRule">
            <flag name="RULE_CENTER" value="0" />
            <flag name="RULE_BOTTOM" value="1" />
        </attr>
        <!-- true 点击加号切换fragment
         false 点击加号不切换fragment进行其他操作（跳转界面等）-->
        <attr name="Easy_centerAsFragment" format="boolean" />
        <attr name="Easy_centerSelectTextColor" format="color" />
        <attr name="Easy_centerNormalTextColor" format="color" />
        <attr name="Easy_centerTextSize" format="dimension" />
        <!--加号文字距离顶部加号的距离-->
        <attr name="Easy_centerTextTopMargin" format="dimension" />
        <!--是否和其他tab文字底部对齐-->
        <attr name="Easy_centerAlignBottom" format="dimension" />
        <!--文字大小单位DP还是SP-->
        <attr name="Easy_textSizeType">
            <flag name="TYPE_DP" value="1" />
            <flag name="TYPE_SP" value="2" />
        </attr>

    </declare-styleable>

    <!--密码输入框-->
    <declare-styleable name="InputKeyWordView">
        <!--输入位数 默认4位-->
        <attr name="ipv_input_length" format="integer" />
        <!--底部线-->
        <attr name="ipv_show_bottom_line" format="boolean" />
        <!--底部线高度-->
        <attr name="ipv_bottom_line_height" format="dimension" />
        <!--底部线的颜色-->
        <attr name="ipv_bottom_line_color" format="color" />
        <!--显示字的颜色-->
        <attr name="ipv_show_txt_color" format="color" />
        <!--显示字的大小-->
        <attr name="ipv_txt_size" format="dimension" />
        <!--提示字-->
        <attr name="ipv_hint_text" format="string" />
        <!--提示颜色-->
        <attr name="ipv_hint_color" format="color" />
        <!--光标颜色-->
        <attr name="ipv_cursor_color" format="color" />
        <!--输入类型-->
        <attr name="ipv_input_type" format="enum">
            <!--数字-->
            <enum name="number" value="0x11" />
            <!--数字和字母-->
            <enum name="numChar" value="0x12" />
        </attr>

    </declare-styleable>


    <declare-styleable name="Search_View">
        <attr name="textSizeSearch" format="dimension"  />
        <attr name="textColorSearch" format="color" />
        <attr name="textHintSearch" format="string" />
        <attr name="searchBlockHeight" format="integer" />
        <attr name="searchBlockColor" format="color" />
    </declare-styleable>

    <declare-styleable name="MusicalNoteLayout">
        <attr name="circle_music_view_res" format="reference"/>
        <attr name="circle_music_view_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="AutoLinkTextView">
        <!-- 链接高亮颜色 -->
        <attr name="highlight_textcolor" format="color" />
        <!-- 默认文字颜色 -->
        <attr name="default_textcolor" format="color" />
    </declare-styleable>

    <declare-styleable name="CircleMusicView">
        <attr name="circle_music_view_progress_width" format="dimension"/>
        <attr name="circle_music_view_progress_slot_color" format="color"/>
        <attr name="circle_music_view_progress_buffer_color" format="color"/>
        <attr name="circle_music_view_progress_color" format="color"/>
    </declare-styleable>

    <!--小视频进度条-->
    <declare-styleable name="ProgressView">
        <!--进度条初始颜色-->
