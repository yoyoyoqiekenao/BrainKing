    <declare-styleable name="HeartViewGroup">
        <attr name="heart_swipe_image" format="integer" />
        <attr name="heart_shake" format="boolean" />
        <attr name="heart_refresh_rate" format="integer" />
        <attr name="heart_degrees_interval_min" format="integer" />
        <attr name="heart_degrees_interval_max" format="integer" />
    </declare-styleable>

    <declare-styleable name="PlayerProgressBar">
        <attr name="backgroundColor" format="color|reference" />
        <attr name="progressBarColor" format="color|reference" />
        <attr name="bufferedBarColor" format="color|reference" />
        <attr name="backgroundColorAlpha" format="float" />
        <attr name="progressBarColorAlpha" format="float" />
        <attr name="bufferedBarColorAlpha" format="float" />
    </declare-styleable>

    <declare-styleable name="RangeSlider11" tools:ignore="DuplicateDefinition">
        <attr name="lineHeight1" format="dimension" />
        <attr name="thumbWidth1" format="dimension" />
        <attr name="lineColor1" format="color" />
        <attr name="maskColor1" format="color" />
        <attr name="tickCount1" format="integer" />
        <attr name="leftThumbIndex1" format="integer" />
        <attr name="rightThumbIndex1" format="integer" />
        <attr name="leftThumbDrawable1" format="reference" />
        <attr name="rightThumbDrawable1" format="reference" />
        <attr name="midThumbDrawable1" format="reference" />
    </declare-styleable>

    <declare-styleable name="StickerView">
        <attr name="src_bitmap" format="reference" />            <!-- 用于缩放旋转的图标 -->
        <attr name="editable" format="boolean" />          <!-- 是否处于可编辑状态 -->
        <attr name="frameColor" format="color" />         <!-- 边框颜色 -->
        <attr name="frameWidth" format="dimension" />     <!-- 边框线宽度 -->
        <attr name="framePadding" format="dimension" />   <!-- 边框与图片的间距 -->
        <attr name="degree" format="float" />             <!-- 旋转角度 -->
        <attr name="scale" format="float" />              <!-- 缩放比例 -->
        <attr name="controlDrawable" format="reference" /> <!-- 控制图标 -->
        <attr name="editDrawable" format="reference" />   <!--编辑图标位置-->
        <attr name="deleteDrawable" format="reference" /> <!--删除图标位置-->
        <attr name="controlLocation">                     <!-- 控制图标的位置 -->
            <enum name="left_top" value="0" />
            <enum name="right_top" value="1" />
            <enum name="right_bottom" value="2" />
            <enum name="left_bottom" value="3" />
        </attr>
        <attr name="editLocation">                     <!-- 编辑图标的位置 -->
            <enum name="left_top" value="0" />
            <enum name="right_top" value="1" />
            <enum name="right_bottom" value="2" />
            <enum name="left_bottom" value="3" />
        </attr>
        <attr name="deleteLocation">                     <!-- 删除图标的位置 -->
            <enum name="left_top" value="0" />
            <enum name="right_top" value="1" />
            <enum name="right_bottom" value="2" />
            <enum name="left_bottom" value="3" />
        </attr>
    </declare-styleable>

    <!--仿抖音Loading-->
    <declare-styleable name="LoadingView">
        <attr name="radius1" format="dimension"/> <!--球1的半径,默认为6dp,设置的方法:setRadius()-->
        <attr name="radius2" format="dimension"/><!--球2的半径,默认为6dp,设置的方法:setRadius()-->
        <attr name="rtlScale" format="float"/><!--小球从右往左的最大缩放倍数,默认0.7,设置的方法:setScales()-->
        <attr name="ltrScale" format="float"/><!--小球从左往右的最大缩放倍数,默认1.3,设置的方法:setScales()-->
        <attr name="color1" format="color"/><!--球1的颜色,默认设置的方法:setColors()-->
        <attr name="color2" format="color"/><!--球2的颜色,默认设置的方法:setColors()-->
        <attr name="mixColor" format="color"/><!--叠加的颜色,默认是黑色,设置的方法:setColors()-->
        <attr name="duration" format="integer"/><!--一次转动的动画时长，默认:350ms,设置的方法:setDuration()-->
        <attr name="pauseDuration" format="integer"/><!--一次转动动画以后停顿的时间,默认80ms,设置的方法:setDuration()-->
        <attr name="gap" format="dimension"/><!--两球的间隔,默认0.8dp,设置方法：setRadius()-->
        <attr name="scaleStartFraction" format="float"/><!--动画进度在[0,scaleStartFraction]期间，小球大小逐渐缩放，默认0.2f,设置的方法:setStartEndFraction()-->
        <attr name="scaleEndFraction" format="float"/><!--动画进度在[scaleEndFraction,1]期间，小球大小逐渐恢复，默认0.8f,设置的方法:setStartEndFraction()-->
    </declare-styleable>

